# Maintainer: James Brink <brink.james@gmail.com>
_pkgname='brinkOS Icons'
pkgname=brinkOS-icons
pkgver=1.0.0
pkgrel=1
pkgdesc='Icons for brinkOS'
arch=(any)
license=(GPL)
url="https://github.com/brinkOS/brinkOS-icons"
depends=()
install=brinkOS-icons.install
source=("git+https://github.com/brinkOS/brinkOS-icons#branch=master")
sha256sums=('SKIP')

package() {
	mkdir -p "${pkgdir}/usr/share/icons"
	cp -rf "${srcdir}/brinkOS-icons/brinkOS-icons/brinkOS-base" "${pkgdir}/usr/share/icons"
	cp -rf "${srcdir}/brinkOS-icons/brinkOS-icons/brinkOS-base-light" "${pkgdir}/usr/share/icons"
	cp -rf "${srcdir}/brinkOS-icons/brinkOS-icons/brinkOS" "${pkgdir}/usr/share/icons"
	cp -rf "${srcdir}/brinkOS-icons/brinkOS-icons/brinkOS-light" "${pkgdir}/usr/share/icons"
}

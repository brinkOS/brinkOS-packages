# Forked from AUR
# Original Maintainer: Jesus Alvarez <jeezusjr at gmail dot com>
#
# This PKGBUILD was generated by the archzfs build scripts located at
#
# http://github.com/archzfs/archzfs
#
# ! WARNING !
#
# The archzfs packages are kernel modules, so these PKGBUILDS will only work with the kernel package they target. In this
# case, the archzfs-linux packages will only work with the default linux package! To have a single PKGBUILD target many
# kernels would make for a cluttered PKGBUILD!
#
# If you have a custom kernel, you will need to change things in the PKGBUILDS. If you would like to have AUR or archzfs repo
# packages for your favorite kernel package built using the archzfs build tools, submit a request in the Issue tracker on the
# archzfs github page.
#
pkgbase="brinkOS-zfs"
pkgname=("brinkOS-zfs" "brinkOS-zfs-headers")

pkgver=0.7.8.4.16.13.1
pkgrel=3
makedepends=("linux-headers=4.16.13-1" "brinkOS-spl-headers")
arch=("x86_64")
url="http://zfsonlinux.org/"
source=("https://github.com/zfsonlinux/zfs/releases/download/zfs-0.7.8/zfs-0.7.8.tar.gz")
sha256sums=("70ba0edd72914d4bfc9a9426cf26725e955a9509acbddb6902efb9eebb35f150")
license=("CDDL")
depends=("kmod" "brinkOS-spl" "brinkOS-zfs-utils-common=0.7.8" "linux=4.16.13-1")


build() {
    cd "${srcdir}/zfs-0.7.8"
    ./autogen.sh
    ./configure --prefix=/usr --sysconfdir=/etc --sbindir=/usr/bin --libdir=/usr/lib \
                --datadir=/usr/share --includedir=/usr/include --with-udevdir=/lib/udev \
                --libexecdir=/usr/lib/zfs-0.7.8 --with-config=kernel \
                --with-linux=/usr/lib/modules/4.16.13-1-ARCH/build \
                --with-linux-obj=/usr/lib/modules/4.16.13-1-ARCH/build
    make
}

package_brinkOS-zfs() {
    pkgdesc="Kernel modules for the Zettabyte File System."
    install=brinkOS-zfs.install
    provides=("zfs" 'brinkOS-zfs')
    groups=("zfs")
    conflicts=('zfs-linux-git' 'zfs')
    replaces=("zfs-git")
    cd "${srcdir}/zfs-0.7.8"
    make DESTDIR="${pkgdir}" install
    cp -r "${pkgdir}"/{lib,usr}
    rm -r "${pkgdir}"/lib
    # Remove src dir
    rm -r "${pkgdir}"/usr/src
}

package_brinkOS-zfs-headers() {
    pkgdesc="Kernel headers for the Zettabyte File System."
    provides=('zfs-linux-headers' 'brinkOS-zfs-headers')
    groups=("zfs")
    conflicts=('zfs-archiso-linux-headers' 'zfs-archiso-linux-git-headers' 'zfs-linux-hardened-headers' 'zfs-linux-hardened-git-headers' 'zfs-linux-lts-headers' 'zfs-linux-lts-git-headers'  'zfs-linux-git-headers' 'zfs-linux-vfio-headers' 'zfs-linux-vfio-git-headers' 'zfs-linux-zen-headers' 'zfs-linux-zen-git-headers' 'zfs-linux-headers')
    cd "${srcdir}/zfs-0.7.8"
    make DESTDIR="${pkgdir}" install
    rm -r "${pkgdir}/lib"
    # Remove reference to ${srcdir}
    sed -i "s+${srcdir}++" ${pkgdir}/usr/src/zfs-*/4.16.13-1-ARCH/Module.symvers
}
